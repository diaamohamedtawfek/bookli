<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".actitvity.Booking_Activity">


    <LinearLayout
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardMaxElevation="@dimen/_3sdp"
            app:cardElevation="@dimen/_3sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/image_doctorprofile"
                    android:layout_width="@dimen/_84sdp"
                    android:layout_height="@dimen/_84sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/text_nameDoctor_booking"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#051716"
                    android:gravity="center_horizontal"
                    android:text="Mustafa Mahmoud"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardMaxElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        android:background="#f6f6f6"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_3sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#f6f6f6"
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_dayTitle_date"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="@dimen/_106sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="3.3sp"
                android:gravity="center_horizontal"
                android:text="Today"
                />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/text_date_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_50sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="22"
                />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/text_name_date_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="22"
                />

            <ImageView
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_time"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/text_timestart_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11ssp"
                android:textColor="#007a6f"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                android:text=""
                android:layout_marginBottom="@dimen/_15sdp"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardMaxElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        android:background="#f6f6f6"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_3sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:drawableLeft="@drawable/ic_location_black_24dp"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_17sdp"
                android:textColor="#007a6f"
                android:lineSpacingExtra="3.5sp"
                android:gravity="left"
                android:text="Clinic Location"
                />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"

                android:id="@+id/text_locationClinc_Booking"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="left"
                android:paddingLeft="@dimen/_29sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="3sp"
                android:text="585 El Horreya St., Abou Kir Glim, Alexandria"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:textColor="#051716"
            android:lineSpacingExtra="3.3sp"
            android:gravity="center_horizontal"
            android:text="Terms and Conditions"
            />

        <TextView
            android:id="@+id/text_nameClinc_Booking"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="#051716"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:text=".Examination by priority of attendance"
            />


        <Button
            android:id="@+id/bu_booking"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:background="@drawable/busin"
            android:textSize="@dimen/_16sdp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="3.3sp"
            android:text="Confirm Booking"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>