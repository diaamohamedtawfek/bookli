<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    tools:context=".actitvity.ProfileDoctor">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:background="@drawable/layoutprofil"
        android:layout_height="@dimen/_217sdp"></LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_18sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_63sdp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_save_insaved_profile"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_save"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/text_namedoctor_profiledoctor"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#051716"
            android:lineSpacingExtra="3.8sp"
            android:gravity="center"
            android:text="Mustafa Mahmoud"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <RatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:isIndicator="true"
                android:id="@+id/rating"
                android:progressTint="#ffd500"
                android:layout_gravity="left"
                android:transformPivotX="10dp"
                android:transformPivotY="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"/>

            <TextView
                android:id="@+id/text_Rating_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.5sp"
                android:textColor="#051716"
                android:lineSpacingExtra="2.8sp"
                android:gravity="center_horizontal"
                tools:text="4.5"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_pricedoctor_profile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="4.5sp"
                android:gravity="center_horizontal"
                tools:text="150"
                />

            <TextView
                android:id="@+id/text_numReservations_profile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="4.5sp"
                android:gravity="center_horizontal"
                tools:text="150
"
                />

            <TextView
                android:id="@+id/text_toatelrating_profile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="4.5sp"
                android:gravity="center_horizontal"
                tools:text="150
"
                />

        </LinearLayout>


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"

                app:tabSelectedTextColor="#000"
                app:tabIndicatorColor="#007a6f"
                app:tabTextColor="#000"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:background="#f6f6f6"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    </LinearLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_doctorprofile"
        android:layout_width="@dimen/_84sdp"
        android:layout_height="@dimen/_84sdp"
        android:src="@drawable/person"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        tools:ignore="VectorDrawableCompat" />





    </RelativeLayout>



</RelativeLayout>