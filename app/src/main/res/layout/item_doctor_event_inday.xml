<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_4sdp"
    android:id="@+id/card_alldoctor"
    android:layout_height="@dimen/_117sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_body_home"
            android:layout_width="@dimen/_84sdp"
            android:layout_height="@dimen/_84sdp"
            android:src="@drawable/img1"
            app:civ_border_width="1dp"
            app:civ_border_color="#e5e5e5"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/text_namedoc_body_home"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/_16sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="3.3sp"
                android:gravity="center_horizontal"
                android:text="Mustafa Mahmoud"
                />


            <TextView
                android:id="@+id/text_spisial_body_home"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:textColor="#afafaf"
                android:lineSpacingExtra="2.5sp"
                android:gravity="center_horizontal"
                android:text="Neurosurgery Specialist"
                />



            <TextView
                android:id="@+id/text_timestart_end_event"
                android:drawableLeft="@mipmap/ic_time"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="2.5sp"
                android:gravity="center_horizontal"
                android:text="From at "
                />



            <TextView
                android:id="@+id/text_location_Doctor_event"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_location_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/_12sdp"
                android:textColor="#051716"
                android:lineSpacingExtra="2.5sp"
                android:text="Abou Kir Glim..."
                />


        </LinearLayout>

        <!--ImageView
            android:src="@drawable/ic_save"
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            tools:ignore="VectorDrawableCompat" /-->

    </LinearLayout>

</androidx.cardview.widget.CardView>