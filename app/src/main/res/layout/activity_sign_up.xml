<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actitvity.login.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="141dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#051716"
            android:lineSpacingExtra="3.3sp"
            android:gravity="center"
            android:text="Book your doctor"
            />

        <EditText
            android:id="@+id/ed_email_login"
            android:hint="email"
            android:textSize="16sp"
            android:lineSpacingExtra="3.3sp"
            android:drawablePadding="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ed_login"
            android:drawableLeft="@mipmap/ic_user_name"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:hint="User Name"
            android:id="@+id/ed_name_login"
            android:drawablePadding="15dp"
            android:textSize="16sp"
            android:lineSpacingExtra="13.3sp"
            android:paddingLeft="5dp"
            android:background="@drawable/ed_login"
            android:drawableLeft="@mipmap/ic_password"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <EditText
            android:id="@+id/ed_phone_login"
            android:hint="Phone"
            android:textSize="16sp"
            android:lineSpacingExtra="3.3sp"
            android:drawablePadding="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="phone"
            android:background="@drawable/ed_login"
            android:drawableLeft="@mipmap/ic_user_name"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:text="123Aa"
            android:id="@+id/ed_password_login"
            android:drawablePadding="15dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:lineSpacingExtra="13.3sp"
            android:hint="Password"
            android:paddingLeft="5dp"
            android:background="@drawable/ed_login"
            android:drawableLeft="@mipmap/ic_password"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />



        <Button
            android:id="@+id/bu_login_login"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:background="@drawable/busin"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="3.3sp"
            android:text="SIGN UP"
            android:layout_height="wrap_content" />



    </LinearLayout>

</ScrollView>